{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Dashboard.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [Songhay.Dashboard.Shell.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.Dashboard.Shell.Tests/Songhay.Dashboard.Shell.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [clean test output folder]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/TestResults"
            },
            "linux": {
                "command": "rm",
                "args": [
                    "--verbose",
                    "*.trx"
                ]
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Path",
                    "*.trx",
                    "-Verbose"
                ]
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Songhay.Dashboard/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "type": "npm",
            "script": "build:prod",
            "path": "Songhay.Dashboard/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "type": "npm",
            "script": "start",
            "path": "Songhay.Dashboard/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "type": "npm",
            "script": "start",
            "path": "Songhay.Dashboard/Client/",
            "problemMatcher": [
                "$tslint5"
            ]
        }
    ]
}
